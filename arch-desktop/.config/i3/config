set $mod Mod4
font pango:hack 12

set $Locker i3lock && sleep 1
hide_edge_borders both
default_border pixel 0
gaps inner 8
gaps outer 6

# startup programs
exec_always --no-startup-id $HOME/.config/i3/scripts/xrandr.sh
exec_always --no-startup-id $HOME/.config/polybar/launch.sh
exec_always --no-startup-id $HOME/.config/i3/scripts/mounts.sh
exec_always --no-startup-id feh --bg-scale $HOME/.config/wallpapers/wallhaven-49o71x.jpg
exec_always --no-startup-id picom &
exec --no-startup-id dex --autostart --environment i3
#exec --no-startup-id xss-lock --transfer-sleep-lock --i3lock --nofork
exec --no-startup-id nm-applet
#exec_always --no-startup-id $HOME/.config/i3/scripts/i3-start.sh

# autostart programs on launch
exec --no-startup-id i3-msg 'workspace 1; exec zen-browser; workspace 1'
exec --no-startup-id i3-msg 'workspace 2; exec alacritty; workspace 2'
exec --no-startup-id i3-msg 'workspace 3; exec obsidian; workspace 3'
exec --no-startup-id i3-msg 'workspace 4; exec discord; workspace 4'
exec --no-startup-id i3-msg 'workspace 5; exec zen-browser music.youtube.com; workspace 5'
#exec --no-startup-id i3-msg 'workspace 7; exec 1password; workspace 7'
exec --no-startup-id i3-msg 'workspace 8; exec 1password; workspace 8'
